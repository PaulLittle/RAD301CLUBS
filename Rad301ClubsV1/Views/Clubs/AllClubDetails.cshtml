@using Rad301ClubsV1.Models.ClubModel;

@model IEnumerable<Club>

@{
    ViewBag.Title = "AllClubDetails";
}

<h2>All Club Details</h2>
@* A form to post back to the same controller a search term *@
<form method="get" class="form-group">
    <input type="search" name="ClubName" value="@ViewBag.ClubName" />
    <input type="submit" name="Search by Club name" class="btn btn-primary btn-xs" value="Search by Club Name" />
</form>

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-xs" })
</div>

@foreach (Club c in Model)
{

    <h3>
        @Html.DisplayFor(m => c.ClubName, new { @class = "control-label" })
    </h3>
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong>Event List</strong>
        </div>
        <table class="table table-hover table-condensed">
            <tr>
                <th align="left">
                    Venue
                </th>
                <th align="left">
                    Location
                </th>
                <th align="left">
                    Start Date Time
                </th>
                <th align="left">
                    End Date Time
                </th>
            </tr>
            @foreach (ClubEvent ce in c.clubEvents)
            {
                <tr>
                    <td align="left">
                        @Html.DisplayFor(modelItem => ce.Venue)
                    </td>
                    <td align="left">
                        @Html.DisplayFor(modelItem => ce.Location)
                    </td>
                    <td align="left">
                        @Html.DisplayFor(modelItem => ce.StartDateTime)
                    </td>
                    <td align="left">
                        @Html.DisplayFor(modelItem => ce.EndDateTime)
                    </td>
                </tr>
            }
        </table>
        </div>
        }
